<% provide(:title, "My Profile") %>
<br>

<div class ="container">        

  <div class="row">
      <div class="col s12">
        <div class="card">
            <div class="card-content">
              <h3> 
              <% if current_user.image? %>
                <%= image_tag current_user.image, class: 'circle' %>
              <% end %>
                <%= current_user.name %></h3>
                <br>
                <p><%= current_user.email %></p>
                <%="Rating:  #{current_user.rating.to_s}" unless current_user.rating == nil %></p>
                              <div class="right"><%= link_to 'Edit profile', edit_user_registration_path, class: 'waves-effect waves-light btn white-text cardbutton' %></div>

              </div>
            </div>
      </div>
  </div>
</div>










